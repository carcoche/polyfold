<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>


<BorderPane fx:id="app"
            id="backdrop" 
            xmlns="http://javafx.com/javafx/8" 
            xmlns:fx="http://javafx.com/fxml/1">
  <right>
    <VBox styleClass="right">
      <children>
        <VBox id="move-panel">
          <children>
            <VBox styleClass="move-pane">
            </VBox>
            <VBox styleClass="move-pane">
              <children>
                <HBox styleClass="slider-hbox">
                  <children>
                    <ImageView fx:id="zeroPNG">
                      <image>
                        <Image url="assets/zero.png"/>
                      </image>
                    </ImageView>
                    <Slider fx:id="thetaSlider"/>
                    <ImageView fx:id="piPNG1">
                      <image>
                        <Image url="assets/pi.png"/>
                      </image>
                    </ImageView>
                  </children>
                </HBox>
                <HBox styleClass="slider-hbox">
                  <children>
                    <ImageView fx:id="negPiPNG">
                      <image>
                        <Image url="assets/neg_pi.png"/>
                      </image>
                    </ImageView>
                    <Slider fx:id="taoSlider"/>
                    <ImageView fx:id="piPNG2">
                      <image>
                        <Image url="assets/pi.png"/>
                      </image>
                    </ImageView>
                  </children>
                </HBox>
              </children>
            </VBox>
          </children>
        </VBox>
      </children>
    </VBox>
  </right>

  <bottom>
    <VBox id="statusbar">
    </VBox>
  </bottom>

  <center>
  </center>

  <top>
    <VBox>
      <children>
        <MenuBar id="menubar">
          <menus>
            <Menu text="File">
              <items>
                <MenuItem text="New File"/>
                <MenuItem text="Open..." onAction="#openFile"/>
                <MenuItem text="Save"/>
                <MenuItem text="Save As..."/>
                <MenuItem text="Close File"/>
              </items>
            </Menu>
            <Menu text="Edit">
              <items>
                <MenuItem text="Undo"/>
                <MenuItem text="Redo"/>
              </items>
            </Menu>
            <Menu text="View">
              <items>
                <MenuItem text="Show Toolbar"/>
                <MenuItem text="Hide Toolbar"/>
              </items>
            </Menu>
            <Menu text="Window">
              <items>
                <MenuItem text="Minimize"/>
                <MenuItem text="Full Screen"/>
              </items>
            </Menu>
            <Menu text="Help">
              <items>
                <MenuItem text="About"/>
                <MenuItem text="License"/>
              </items>
            </Menu>
          </menus>
        </MenuBar>
        <HBox id="toolbar">
          <children>
            <Button text="Button"/>
            <Button text="Button"/>
            <Button text="Button"/>
          </children>
        </HBox>
      </children>
    </VBox>
  </top>
</BorderPane>
